<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/end_color"/>
                    <stroke android:width="1dp"
                        android:color="@color/dark_grayish_blue"/>
                    <size android:width="36dp"
                        android:height="36dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/uk_flag" android:gravity="right" android:width="36dp" android:height="36dp"/>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/end_color"/>
                    <stroke android:width="1dp"
                        android:color="@color/dark_grayish_blue"/>
                    <size android:width="36dp"
                        android:height="36dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/bulgarian_flag" android:gravity="right" android:width="36dp" android:height="36dp"/>
        </layer-list>
    </item>
</selector>